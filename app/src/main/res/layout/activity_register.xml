<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/back"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".RegisterActivity">


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:clickable="true"
            android:padding="25dp"
            android:gravity="center">

            <TextView
                android:id="@+id/Title"
                android:layout_width="fill_parent"
                android:layout_height="44dp"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:text="Sgin Up"
                android:textColor="@color/purple_500"
                android:textSize="25sp"/>

            <EditText
                android:id="@+id/Fname"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/Title"
                android:layout_marginTop="30dp"
                android:background="@drawable/rect_border"
                android:drawablePadding="0dp"
                android:hint="first name"
                android:inputType="textPersonName"
                android:layoutDirection="ltr"
                android:padding="10dp"
                android:textColor="@color/purple_500"
                android:textColorHint="@color/purple_500"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/Lname"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/Fname"
                android:layout_marginTop="20dp"
                android:background="@drawable/rect_border"
                android:drawablePadding="10dp"
                android:hint="last name"
                android:inputType="textPersonName"
                android:layoutDirection="ltr"
                android:padding="10dp"
                android:textColor="@color/purple_500"
                android:textColorHint="@color/purple_500"
                android:textSize="14sp" />

<!--            <EditText-->
<!--                android:id="@+id/Email"-->
<!--                android:layout_width="fill_parent"-->
<!--                android:layout_height="50dp"-->
<!--                android:layout_marginTop="20dp"-->
<!--                android:layout_below="@+id/Lname"-->
<!--                android:backgroundTintMode="add"-->
<!--                android:drawableLeft="@drawable/ic_baseline_person_outline_24"-->
<!--                android:drawablePadding="10dp"-->
<!--                android:background="#7EF3EFEF"-->
<!--                android:hint="email"-->
<!--                android:layoutDirection="ltr"-->
<!--                android:inputType="textWebEmailAddress"-->
<!--                android:padding="10dp"-->
<!--                android:textColor="@color/purple_500"-->
<!--                android:textColorHint="@color/purple_500" />-->

<!--            <TextView-->
<!--                android:id="@+id/VEmail_error"-->
<!--                android:layout_width="fill_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:textColor="#AE0909"-->
<!--                android:textSize="18sp" />-->

            <EditText

                android:id="@+id/Phone"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/Email"
                android:layout_marginTop="10dp"
                android:background="@drawable/rect_border"
                android:hint="phone number"
                android:inputType="number"
                android:layoutDirection="ltr"
                android:padding="10dp"
                android:textColor="@color/purple_500"
                android:textColorHint="@color/purple_500"
                android:textSize="14sp" />


            <EditText
                android:id="@+id/Pass1"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/Phone"
                android:layout_marginTop="20dp"
                android:background="@drawable/rect_border"
                android:drawablePadding="10dp"
                android:hint="password"
                android:inputType="textPassword"
                android:layoutDirection="ltr"
                android:padding="10dp"
                android:textColor="@color/purple_500"
                android:textColorHint="@color/purple_500"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/VPass1_error"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#AE0909"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/Pass2"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/Pass1"
                android:layout_marginTop="10dp"
                android:background="@drawable/rect_border"
                android:drawablePadding="10dp"
                android:hint="confirm password"
                android:inputType="textPassword"
                android:layoutDirection="ltr"
                android:padding="10dp"
                android:textColor="@color/purple_500"
                android:textColorHint="@color/purple_500"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/VPass2_error"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#AE0909"
                android:textSize="18sp" />

            <Button
                android:id="@+id/BtnRegister"
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/Pass2"
                android:backgroundTint="@color/purple_500"
                android:text="Register" />


                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layoutDirection="ltr"
                    android:layout_marginTop="30dp">

                    <TextView
                        android:id="@+id/VRLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="you have an account ?"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/BtnLogin"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_below="@+id/Pass2"
                        android:autoLink="all"
                        android:inputType="textUri"
                        android:backgroundTint="#D8D5DD"
                        android:text="Login"
                        android:textSize="20dp"
                        android:textColor="@color/purple_500" />

                </LinearLayout>

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>